  color: #031D48;
  margin: 0 0 12px 0;
  padding: 0 0 8px 0;
  border-bottom: none !important;  
  }
  
#email label{
    color: #031D48;
    font-size: 14px !important;
    margin: 0 0 2px 0;
    padding: 0;
}
  
  
/** 
 * Umbrella 
 */ 
#info-bar{
  display: none;
  }
  

/** 
 * Header
 */
#header,
#header h1{
  padding: 0;
  }
  
#header h1{
    visibility: hidden;    
}

#tagline{
  {%if settings.header_font == 'BebasNeueRegular, arial, sans-serif' %}
    font: 48px/1.0 {{settings.header_font}};
  {% else %}
    font: bold 36px/1.0 {{settings.header_font}};
  {% endif %}
  color: {{settings.logo_colour}};
  margin: 25px 0;
  }
#tagline .subtitle{
  display: none;
  }

{% if settings.logo_image == "logo.png" %}
#logo{
  width: 100%;
  height: 200px;
  background: url({{ settings.logo_image | asset_url }}) 0 85% no-repeat;
  }
#tagline{ display: none; }
{% endif %}

/** 
 * Overview
 */

 #overview{ /* styles from widgets in right column */
  background: none !important;
  border: none !important;
  height: auto;
  margin: 101px 0 0 219px;
  padding: 0;
  width: 671px;
  }

#overview h2{
  display: none; /* hide: you know you're purchasing these things. */
  color: {{ settings.widget_text_colour }};
  text-align: center;
  }

#overview #products{
  width: auto;
  float: none;
  border: none;
  }
#overview #wallet{
  height: 53px;
  margin: 0 !important; padding: 0 !important;
  text-align: left !important;
  width: 312px;
  }
#overview #cost{
  background-color: #031D48 !important;
  color: white;
  display: inline-block;
  float: left;
  font-size: 12px !important;
  text-shadow: none;
  padding: 3px !important;
  }
#overview .hint{
  color: {{settings.widget_title_colour}};
  float: left;
  margin: 0 5px 3px 0;
  display: block;
  }
#overview #steps{
  margin: 0; padding: 0 0 0 10px;
  display: inline-block;
  float: left;
  font-size: 14px !important; 
  font-style: normal !important;
  }
#overview br{ display: none; }

#overview #thumbs{
  margin: 0;
  border-collapse: collapse;
  }
#overview #thumbs td{
    display: inline-block;
  overflow: hidden; 
  height: 72%;
  font-size: 100%;
  text-align: center;
  vertical-align: top;
  padding-bottom: 13px;
  padding-right: 90px;
  width: 214px !important;
  }
#overview #thumbs div{
  float: left;
  width: auto; height: auto;
  border: none;
  margin: 0 0 10px 0; padding-right: 15px;
  }
#overview #thumbs img{ 
  display: block; 
  /*height: 90px !important;*/
  margin: 0 auto;
  /*width: 78px !important;  */
  }

#overview #thumbs h3{
    color: #031D48;
    float: left;
}
#overview #thumbs span{
    display: block;
    color: #031D48;
    float: left;
    height: 15px;
    line-height: 14px;
    text-align: left;
    width: 139px;
}

.slim #overview{ display: none; }

/** 
 * Checkout Form 
 */

.form{ width: 100%; }
.form label{ color: #031D48; font-weight: normal; }

.form td{ padding: 5px 0; }
.form td.lbl{ width: 165px; text-align: right; padding-right: 8px; }
/*.form td input{ font-size: 13px; width: 200px; }*/

.form .inline li{ 
  float: none;
  width: 100% !important; 
  margin: 0 !important; 
  overflow: hidden;
  height: 1%;
  padding: 0 0 8px 0;
  }
.form .inline label{
  float: left;
  width: 95px; text-align: right; padding-right: 13px;
  }
.form .inline select{
    background-color: #fbfbfb;
    border: 1px solid #E8E8E8 !important;
  float: left;
  width: 184px !important;
  }
#billing_address_province_li,
#shipping_address_province_li{ padding: 0; }

/* Form Errors */
.field-with-errors{
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;    
  }

/* Billing/Shipping Addresses */
#addresses{
    background: none !important;    
  overflow: hidden;
  height: 1%;
  padding: 0 !important;
  }
  
#addresses table td, #addresses table td ul li label{
    text-align: left !important;
}

#addresses table td input{
    background-color: #fbfbfb;
    border: 1px solid #E8E8E8 !important;
    font-size: 12px !important; 
    height: 18px !important;
    width: 178px !important;
}

#addresses .gleft,
#addresses .gright{
  width: 330px;
  padding: 0;
  margin: 0;
  }
#addresses .gleft{ 
  float: left; 
  border-right: solid 1px #d3d3d3;
  padding-right: 2px;
  padding-bottom: 30px;
  }
#addresses .gright{ float: right; }

#billing_address_phone{
  margin: 0 0 10px 0;
  }
#billing-is-shipping td{
  /*border: solid 1px {{ settings.footer_bg_colour }};*/
  padding: 0px;
  }

#billing-is-shipping td input#shipping-toggle{
    width: 20px !important;
}

#addresses #shipping-same.address-notification{
    color: #031D48;
    border: none !important;
  font-size: 11px !important;
  padding: 10px;
  text-align: left;
  background: none !important;
  }

/* paying for your order */ 
#payment p.sst{
  margin-bottom: 0;
  }

.sst .gleft{
  width: 83%;
  }
#credit-card-info.gright{
  margin: 0 0 0 0px;
  float: left;
  padding: 0 !important;
  width: 496px;
  }
  
#credit-card-info.gright table tr:nth-child(odd) td, #credit-card-info.gright table tr:nth-child(odd){
    display: block;
    float: left;
    width: 273px;
}

#credit-card-info.gright table tr:nth-child(odd) td{
    padding-bottom: 3px;
    padding-top: 1px !important;
}

#credit-card-info.gright table tr:nth-child(even) td{
    padding-bottom: 5px;
}

#credit-card-info.gright table tr:nth-child(even) td input{
    width: 161px !important;
}

#credit-card-info.gright table tr:nth-child(even), #credit-card-info.gright table tr:nth-child(even) td{
    display: block;
    float: right;
}

#credit-card-info.gright table tr:nth-child(even){
    position: relative;
    right: 193px;
    width: 196px;
}

a.closure-lightbox{
    color: #031D48 !important;
    font-size: 12px !important;
    }


#payment-methods li{
  /*border-bottom: dotted 1px {{ settings.content_secondary_colour }};  */
  margin-bottom: 32px !important;
  }

#marketing-box{
  position: relative;
  left: 33px;
  top: -17px;
}

/* Next/Prev Step */
#buttons{
  border: none;
  clear: both;
  background: none !important;
  color: white;
  float: right;
  position: relative;
  right: 75px;
  top: -30px;
  width: 169px;
  padding: 0 !important;
}
#buttons a{ color: #696969; text-decoration: none;}
#buttons a:hover{ color: #696969;}

#buttons small{ 
    display: block;
    float: right;
    font-size: 12px; 
    position: relative;
    top: 7px;
}

#buttons input{ font-size: 11px; }
#buttons #commit-button,
#buttons #complete-purchase{
  display: inline-block;
  padding: 10px;
  text-transform: uppercase;
  float: right;
  text-decoration: none;  
  font-weight: normal;
  letter-spacing: 1px;
  text-align: center;
  cursor: pointer;
  border: none !important;
  background: #d3018d;
  color: white;
  }
#buttons #commit-button:hover, #buttons #complete-purchase:hover{
  background: #E939AF;
  color: white;
}
#buttons #commit-button:active, #buttons #complete-purchase:active {
  background: #cc0088;
  color: white;
}
select#credit_card_month {
  width: 100px;
}
input#credit_card_verification_value {
  margin-left: 21px;
}
/** 
 * Footer 
 */
 #footer{
  clear: both;
  padding: 15px 0 0 0;
  color: {{ settings.footer_txt_colour }};
  }
#footer a{ color: {{ settings.footer_link_colour }};}
#footer a:hover{ color: {{ settings.footer_link_hover_colour }};}


/** 
 * General Weirdness 
 */
#gateway-logos{ 
  /* this ONLY ever showed up in IE8 during my testing. VERY weird. */
  display: none;
  }
