 */

@font-face {
  font-family: 'BebasNeueRegular';
  src: url('BebasNeue-webfont.eot');
  src: url('BebasNeue-webfont.eot?iefix') format('eot'),
       url('BebasNeue-webfont.woff') format('woff'),
       url('BebasNeue-webfont.ttf') format('truetype'),
       url('BebasNeue-webfont.svg#webfontfvFLBU0N') format('svg');
  font-weight: normal;
  font-style: normal;
  }
{% endif %}


/** 
 * Background 
 */
{% if settings.body_bg_img != "none" %}
  html{ 
  {% case settings.body_bg_alignment %}
    {% when 'center' %}
    background: url({{ settings.body_bg_img | asset_url }}) 50% 0 no-repeat; 
      
    {% when 'left' %}
    background: url({{ settings.body_bg_img | asset_url }}) 0 0 no-repeat; 

    {% when 'right' %}
    background: url({{ settings.body_bg_img | asset_url }}) 100% 0 no-repeat; 

    {% when 'tile' %}
    background: url({{ settings.body_bg_img | asset_url }}) 0 0; 
    
  {% endcase %}
  }
{% endif %}

html{ background-color: {{ settings.bg_colour }} }

#main, #header, #footer { background: transparent !important; }


/** 
 * Generic
 */

body { 
    background-color: #f2f2f2;
  font:13px/1.231 {{settings.general_font}}; 
  *font-size:small; 
  color: {{ settings.content_text_colour }};
  margin: -25px auto !important;
  padding: 0;
  } 

input, textarea { 
  color: #333;
  font-size: 13px;
  font-family: {{settings.general_font}};
  }

label{ 
  font-weight: normal; 
  font-size: 11px;
  }

h1, h2, h3, h4, h5, h6 { 
  color: {{ settings.content_header_colour }}; 
  line-height: 1.2;
  font-weight: bold; 
  margin: 0 0 .5em 0;
  text-shadow: none !important;
  }

a { color: {{ settings.content_link_colour }}; }
a:hover { color: {{ settings.content_link_hover_colour}} }



/** 
 * Layout
 */
#container{   
  width: 980px;
  margin: 0 auto;
  }
#main,
#container.slim #main,
#footer{
  padding: 0;
  width: auto;
}

#content{
    margin: 0 auto;
    padding: 0;
    width: 940px;
}

#container{
    background: #ffffff url(logo.png) 20px 0 no-repeat !important;
    background-color: white;
    font-size: 100%;
} 

#container.slim{ width: 980px; }
#container.slim #main{ width: auto;}  

#addresses{
  background: {{ settings.content_bg_colour }};
  }

.group{
  width: 700px;
