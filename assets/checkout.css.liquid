}

#email{
    background: none !important;
    border: none !important;
    line-height: 1.5em;
    margin: 20px 0 0 200px;
    padding: 0;
    width: 257px !important;
}

#email input{
    background-color: white;
    border: 1px solid #E8E8E8 !important;
    font-size: 12px !important;
