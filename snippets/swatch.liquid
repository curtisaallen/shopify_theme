{% capture swatch_small %}{{ product.handle }}-swatch-small.jpg{% endcapture %}
<style type="text/css" media="screen">
  div.buy-menu ul.swatch li {
    background: url({{ swatch_small | asset_url }});
  }
</style>
<ul class="swatch">
  {% case handle %}
    {% when 'cropped-blazer' %}
      {% for variant in product.variants limit:2 offset:1 %}
        {% if  variant.option3 %}
         <li>{{ variant.option3 | escape }}</li>
        {% else %}
        {% endif %}
      {% endfor %}
  
    {% when "other-thing-with-three-options" %}
     {% for variant in product.variants limit:3 offset:1 %}
       {% if  variant.option3 %}
        <li>{{ variant.option3 | escape }}</li>
       {% else %}
       {% endif %}
     {% endfor %}
     
    {% when 'awesome-blazer' %}
     <li>Italian Boucle</li>
  {% endcase %}
     
</ul>