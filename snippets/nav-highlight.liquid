<script type="text/javascript">
$(document).ready(function() {
{% if template %}
$("section.main-nav ul li a").removeClass("active");
{% case handle %}
    
{% when 'meet-quincy' %}
$("section.main-nav ul li:eq(2) a").addClass("active");
{% endcase %}
{% endif %}
{% if collection or product %}

  $("section.main-nav ul li a[title=Shop]").addClass("active");
	{% case handle %}
	//COLLECTION PAGES
	  {% when 'shop' %}
	  $('section.main-nav ul li a[href*="shop"]').addClass("active");
		{% when "blazers" %}
		$('a[href*="blazers"]').addClass("active");		
		{% when "blouses" %}
		$('a[href*="blouses"]').addClass("active");		
		{% when "dresses" %}
		$('a[href*="dresses"]').addClass("active");	
		{% when "skirts" %}
		$('a[href*="skirts"]').addClass("active");	
		{% when "pants" %}
		$('a[href*="pants"]').addClass("active");	
		{% when "collections" or 'the-riley-collection' or 'the-elliott-collection' %}
		$('a[href*="/collections/collections"]').addClass("active");
		{% when "looks" %}
		$('a[href*="looks"]').addClass("active");
	//END COLLECTION PAGES
	{% endcase %}
	{% case product.type %}
	//PRODUCT PAGES
		{% when "Blazer" %}
		$('section.main-nav ul li a[href*="blazers"]').addClass("active");		
		{% when "Dress" %}
		$('a[href*="dress"]').addClass("active");		
		{% when "Blouse" %}
		$('a[href*="blouse"]').addClass("active");
		{% when "Pants" %}
		$('a[href*="pants"]').addClass("active");
		{% when "Skirts" %}
		$('a[href*="skirts"]').addClass("active");
	//END PRODUCT PAGES
	{% endcase %}
{% endif %}
});
</script>